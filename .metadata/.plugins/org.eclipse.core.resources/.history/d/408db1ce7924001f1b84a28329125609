package kosa.data;

public class Order {

	private Food food;
	private int amount;
	
	public Order() {
		food = new Food("아이스크림", 1000);
	}
	
	public Order(int amount) {
		super();	
		this.amount = amount;
	}
	
	public void foodOrder(String menuName) {
		System.out.println("===========");
		System.out.println("메뉴판 >>>>>>");
		food.foodShow();
		System.out.println("===========");
	
		
		if(food.getFoodName().equals(menuName)) {
			amount	+= food.getPrice();
			System.out.println("주문한 음식은 "+food.getFoodName()+"가격은"+amount);
		}else {
			System.out.println("없는 메뉴입니다.");
		}
	}
	
	
	
	
	

}
