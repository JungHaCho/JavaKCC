package kosa.data;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);
		Order order = new Order();

		Food foodadd1 = new Food("아이스크림", 1000);
		Food foodadd2 = new Food("바나나", 2000);

		Food food = new Food();
		String menu = sc.nextLine();
		String chooseMenu;
		switch (menu) {

		case "1":

			food.setFoodName(foodadd1.getFoodName());
			food.setFoodName(foodadd1.getPrice());
			System.out.println("선택할 메뉴를 고르시로");
			chooseMenu = sc.nextLine();
			order.foodOrder(chooseMenu, food);
			break;
		case "2":
			break;
		case "3":
			break;
		case "4":
			break;
		}
	}

}
