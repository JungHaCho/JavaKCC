package kosa.data;

import java.util.LinkedList;

public class Order {

	private LinkedList<Food>queue; // 주문목록 리스트
	private int amount; // 총매출
	
	public Order() {
		queue = new LinkedList<Integer>();
	}
	
	public Order(int amount) {
		super();	
		this.amount = amount;
		
	}
	
	public void foodOrder(String menuName) {
		System.out.println("===========");
		System.out.println("메뉴판 >>>>>>");
		food.foodShow();
		System.out.println("===========");
	
		
		if(food.getFoodName().equals(menuName)) {
			
			queue.offer(food);
			System.out.println(queue+"번째"+"주문한 음식은 "+food.getFoodName()+"가격은"+food.getPrice());
		}else {
			System.out.println("없는 메뉴입니다.");
		}
	}
	
	public void foodPulse() {
		System.out.println("주문처리");
		
		while(!queue.isEmpty()) {
			System.out.println(queue.poll());
		}
		
	}
	
	
	
	

}
