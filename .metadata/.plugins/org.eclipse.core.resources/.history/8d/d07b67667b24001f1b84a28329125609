package kosa.data;

import java.util.LinkedList;

public class Order {

	private Food food;
	private int amount;
	private LinkedList<Integer>queue;
	
	public Order() {
		food = new Food("아이스크림", 1000);
		queue = new LinkedList<Integer>();
	}
	
	public Order(int amount) {
		super();	
		this.amount = amount;
		
	}
	
	public void foodOrder(String menuName) {
		System.out.println("===========");
		System.out.println("메뉴판 >>>>>>");
		food.foodShow();
		System.out.println("===========");
	
		
		if(food.getFoodName().equals(menuName)) {
			
			queue.offer(amount++);
			System.out.println(queue+"번째"+"주문한 음식은 "+food.getFoodName()+"가격은"+amount);
		}else {
			System.out.println("없는 메뉴입니다.");
		}
	}
	
	public void foodPulse() {
		System.out.println("주문처리");
		
		while(!queue.isEmpty()) {
			System.out.println(queue.poll());
		}
		
	}
	
	
	
	

}
