package kosa_hw1_calbook;

import java.util.Scanner;

import kosa_oop.Book;

public class PhoneMain {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner sc = new Scanner(System.in);

		String name;
		String phoneNo;
		String birth;
		PhoneInfo arr[] = new PhoneInfo[10];
		int cnt = 0;

		

		flag: while (true) {

			System.out.print(">1.추가 2.전체출력 3.검색 4.종료");
			System.out.print(">메뉴 : ");
			String choice = sc.nextLine();
			System.out.println(choice + "\n");

			switch (choice) {

			case "1":
				System.out.print(">이름 : ");
				name = sc.nextLine();
				System.out.print("\n>전화번호 : ");
				phoneNo = sc.nextLine();
				System.out.print("\n>생년월일 : ");
				birth = sc.nextLine();
				System.out.println("\n>전화번호가 등록 되었습니다. ");

				for (int i = 0; i < cnt + 1; i++) {
					arr[cnt] = new PhoneInfo(name, phoneNo, birth);
				}
				cnt++;

				break;

			case "2":

				for (int i = 0; i < cnt; i++) {
					System.out.println(arr[i].birth + " " + arr[i].name + " " + arr[i].phoneNo);
				}
				break;

			case "3":
				;
			case "4":
				System.out.println("프로그램 종료");
				break flag;
			}
		}
	}

}
