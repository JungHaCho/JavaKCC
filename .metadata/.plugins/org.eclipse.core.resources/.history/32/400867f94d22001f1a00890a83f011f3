		Calendar gc1 = Calendar.getInstance();
		int n = gc1.getActualMaximum(Calendar.DATE);
		gc1.set(2024, 1, 1);
		int week = gc1.get(Calendar.DAY_OF_WEEK);
		
		System.out.println("<2024년 6월>");
		System.out.println("");
		for(int i=1;i<week;i++) {
			System.out.print("\t");
		}
		for(int i=1;i<=n;i++) {
			System.out.print(i+"\t");
		}
		for(int i=1;i<=n;i++) {
			System.out.print(i+"\t");
			if((week + i-1) %7 ==0)
				System.out.println();
		}
		
		

	}

